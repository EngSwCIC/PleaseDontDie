<p id="notice"><%= notice %></p>

<h1>Grupos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to 'Mais', group %></td>
        <td><%= link_to 'Editar', edit_group_path(group) %></td>
        <td><%= link_to 'Apagar', group, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to 'Novo Grupo', new_group_path %>
